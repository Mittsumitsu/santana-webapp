/* BookingForm.css - バリデーション機能追加版 */

.booking-form-container {
    max-width: 900px;
    margin: 0 auto;
    padding: 30px;
    background: white;
    border-radius: 15px;
    box-shadow: 0 5px 20px rgba(0, 0, 0, 0.08);
  }
  
  .booking-form-container h2 {
    color: #2c3e50;
    margin-bottom: 30px;
    font-size: 1.8rem;
    font-weight: 600;
    text-align: center;
  }
  
  /* フォームエラーメッセージ */
  .form-error-message {
    background: #f8d7da;
    border: 1px solid #f5c6cb;
    color: #721c24;
    padding: 15px;
    border-radius: 8px;
    margin-bottom: 25px;
    font-weight: 500;
    display: flex;
    align-items: center;
    gap: 10px;
  }
  
  .form-error-message:before {
    content: "⚠️";
    font-size: 1.2rem;
  }
  
  /* フィールド別エラーメッセージ */
  .field-error {
    color: #dc3545;
    font-size: 0.85rem;
    margin-top: 5px;
    font-weight: 500;
    display: flex;
    align-items: center;
    gap: 5px;
  }
  
  .field-error:before {
    content: "⚠️";
    font-size: 0.9rem;
  }
  
  /* エラー状態のフィールド */
  .form-control.error {
    border-color: #dc3545;
    background-color: #fff5f5;
    box-shadow: 0 0 0 2px rgba(220, 53, 69, 0.1);
  }
  
  .form-control.error:focus {
    border-color: #dc3545;
    box-shadow: 0 0 0 3px rgba(220, 53, 69, 0.15);
  }
  
  /* フォームセクション */
  .form-section {
    background: #f8f9fa;
    border-radius: 10px;
    padding: 25px;
    margin-bottom: 25px;
    border: 1px solid #e9ecef;
  }
  
  .form-section h3 {
    color: #495057;
    margin-bottom: 20px;
    font-size: 1.3rem;
    font-weight: 600;
    border-bottom: 2px solid #007bff;
    padding-bottom: 8px;
  }
  
  /* フォームグリッド */
  .form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20px;
    margin-bottom: 20px;
  }
  
  .form-group {
    display: flex;
    flex-direction: column;
  }
  
  /* 全幅要素 */
  .form-group.full-width {
    grid-column: 1 / -1;
  }
  
  .form-group label {
    color: #495057;
    font-weight: 600;
    margin-bottom: 8px;
    font-size: 0.95rem;
  }
  
  .form-control {
    padding: 12px 15px;
    border: 2px solid #e9ecef;
    border-radius: 8px;
    font-size: 1rem;
    transition: all 0.3s ease;
    background: white;
  }
  
  .form-control:focus {
    outline: none;
    border-color: #007bff;
    box-shadow: 0 0 0 3px rgba(0, 123, 255, 0.1);
  }
  
  .form-control::placeholder {
    color: #adb5bd;
  }
  
  /* ゲスト情報セクション */
  .guests-list {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }
  
  .guest-form {
    background: white;
    border: 2px solid #e9ecef;
    border-radius: 10px;
    padding: 20px;
    position: relative;
  }
  
  .guest-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20px;
    padding-bottom: 10px;
    border-bottom: 1px solid #e9ecef;
  }
  
  .guest-header h4 {
    color: #495057;
    margin: 0;
    font-size: 1.1rem;
    font-weight: 600;
  }
  
  .primary-btn {
    background: #f8f9fa;
    border: 2px solid #dee2e6;
    color: #6c757d;
    padding: 8px 16px;
    border-radius: 20px;
    cursor: pointer;
    font-size: 0.85rem;
    font-weight: 500;
    transition: all 0.3s ease;
  }
  
  .primary-btn.active {
    background: #007bff;
    border-color: #007bff;
    color: white;
  }
  
  .primary-btn:hover {
    background: #e9ecef;
    border-color: #adb5bd;
  }
  
  .primary-btn.active:hover {
    background: #0056b3;
    border-color: #0056b3;
  }
  
  /* チェックボックス */
  .checkbox-group {
    display: flex;
    align-items: center;
    gap: 15px;
    padding: 20px;
    background: #e8f4fd;
    border: 2px solid #b8daff;
    border-radius: 10px;
  }
  
  .checkbox-label {
    display: flex;
    align-items: center;
    cursor: pointer;
    font-weight: 500;
    color: #495057;
    margin: 0;
  }
  
  .checkbox-label input[type="checkbox"] {
    margin-right: 10px;
    width: 18px;
    height: 18px;
    cursor: pointer;
  }
  
  /* 送信ボタン */
  .form-actions {
    text-align: center;
    margin-top: 30px;
    padding-top: 25px;
    border-top: 2px solid #e9ecef;
  }
  
  .submit-btn {
    background: linear-gradient(135deg, #007bff 0%, #0056b3 100%);
    color: white;
    border: none;
    padding: 18px 40px;
    border-radius: 30px;
    font-size: 1.1rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0 8px 25px rgba(0, 123, 255, 0.3);
    min-width: 200px;
  }
  
  .submit-btn:hover:not(:disabled) {
    transform: translateY(-2px);
    box-shadow: 0 12px 35px rgba(0, 123, 255, 0.4);
    background: linear-gradient(135deg, #0056b3 0%, #004085 100%);
  }
  
  .submit-btn:disabled {
    background: #6c757d;
    cursor: not-allowed;
    transform: none;
    box-shadow: none;
    opacity: 0.7;
  }
  
  /* ローディング */
  .loading {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 200px;
    font-size: 1.2rem;
    color: #6c757d;
  }
  
  /* バリデーション成功状態 */
  .form-control.valid {
    border-color: #28a745;
    background-color: #f8fff9;
  }
  
  .form-control.valid:focus {
    border-color: #28a745;
    box-shadow: 0 0 0 3px rgba(40, 167, 69, 0.1);
  }
  
  /* モバイル対応 */
  @media (max-width: 768px) {
    .booking-form-container {
      padding: 20px;
      margin: 10px;
    }
  
    .form-row {
      grid-template-columns: 1fr;
      gap: 15px;
    }
  
    .form-section {
      padding: 20px;
    }
  
    .guest-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 10px;
    }
  
    .primary-btn {
      align-self: flex-start;
    }
  
    .checkbox-group {
      flex-direction: column;
      align-items: flex-start;
      gap: 10px;
    }
  
    .submit-btn {
      width: 100%;
      padding: 16px;
    }
  
    .field-error {
      font-size: 0.8rem;
    }
  }
  
  /* タブレット対応 */
  @media (min-width: 769px) and (max-width: 1024px) {
    .booking-form-container {
      padding: 25px;
    }
  
    .form-section {
      padding: 22px;
    }
  }
  
  /* アニメーション削除 - シンプルなエラー表示のみ */
  .form-control.error {
    border-color: #dc3545;
    background-color: #fff5f5;
    box-shadow: 0 0 0 2px rgba(220, 53, 69, 0.1);
  }
  
  /* フォーカス時のアニメーション */
  .form-control {
    position: relative;
    z-index: 1;
  }
  
  .form-control:focus {
    z-index: 2;
  }
  
  /* バリデーション済みフィールドのチェックマーク */
  .form-group.validated .form-control.valid::after {
    content: "✓";
    position: absolute;
    right: 15px;
    top: 50%;
    transform: translateY(-50%);
    color: #28a745;
    font-weight: bold;
  }
  
  /* 必須フィールドマーク */
  .form-group label::after {
    content: "";
  }
  
  .form-group label[for$="Required"]::after,
  .form-group label:has(+ input[required])::after,
  .form-group label:has(+ select[required])::after {
    content: " *";
    color: #dc3545;
    font-weight: bold;
  }
  
  /* 印刷対応 */
  @media print {
    .booking-form-container {
      box-shadow: none;
      padding: 20px;
    }
  
    .form-actions, .primary-btn {
      display: none;
    }
  
    .form-control {
      border: 1px solid #000;
      background: transparent;
    }
  
    .form-section {
      break-inside: avoid;
      background: transparent;
      border: 1px solid #000;
    }
  }